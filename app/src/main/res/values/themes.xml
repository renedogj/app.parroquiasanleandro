<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.ParroquiaSanLeandro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/blue</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
	</style>

	<!-- Style splash -->
	<style name="SplashTheme" parent="Theme.ParroquiaSanLeandro">
		<item name="android:windowBackground">@drawable/fondo_parroquia</item>
	</style>

	<!-- Styles tamaÃ±o  1=match_parent, 2=wrap_content -->
	<style name="size_1_1" parent="TextAppearance.AppCompat">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="size_1_2" parent="TextAppearance.AppCompat">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="size_2_1" parent="TextAppearance.AppCompat">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="size_2_2" parent="TextAppearance.AppCompat">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!-- Styles colores de texto -->
	<style name="texto_1_2_Claro" parent="size_1_2">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="texto_1_1_Oscuro" parent="size_1_1">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="texto_1_2_Oscuro" parent="size_1_2">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="texto_2_2_Oscuro" parent="size_2_2">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="texto_2_1_Oscuro" parent="size_2_1">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="linearLayautItemmenuNavigation" parent="size_1_2">
		<item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
	</style>

	<style name="imgMenuNavigation">
		<item name="android:layout_width">@dimen/img_menu</item>
		<item name="android:layout_height">@dimen/img_menu</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="tvMenuNavigation" parent="size_2_2">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="tvDiasSemanaCalendario" parent="size_2_2">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="color">@color/black</item>
	</style>

	<style name="cardContenedoraHorario" parent="size_1_2">
		<item name="android:layout_marginStart">15dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginEnd">15dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="cardCornerRadius">10dp</item>
		<item name="cardElevation">10dp</item>
	</style>

	<style name="cardTituloHorario" parent="size_1_2">
		<item name="android:layout_marginBottom">5dp</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="cardElevation">8dp</item>
	</style>

	<style name="tvTituloHorario" parent="texto_1_2_Oscuro">
		<item name="android:layout_margin">8dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="cardHorario" parent="size_1_2">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginStart">4dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginEnd">4dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="cardBackgroundColor">@color/blue</item>
		<item name="cardCornerRadius">10dp</item>
		<item name="cardElevation">5dp</item>
	</style>

	<style name="tvHorario" parent="texto_1_2_Claro">
		<item name="android:gravity">center</item>
		<item name="android:padding">8dp</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="lnlytDiaHorarioContenedora" parent="size_1_2">
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
	</style>

	<style name="lnlytDiaSemanaHorario_Despacho_Caritas" parent="lnlytDiaHorarioContenedora">
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="lnlytDiaSemanaHorario_Misas" parent="lnlytDiaHorarioContenedora">
		<item name="android:orientation">vertical</item>
	</style>

	<style name="tvDiaSemanaHorario_Despacho_Caritas" parent="texto_1_1_Oscuro">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginStart">10dp</item>
		<item name="android:layout_marginEnd">10dp</item>
	</style>

	<style name="cardHorario_Despacho_Caritas" parent="cardHorario">
		<item name="android:layout_marginEnd">10dp</item>
	</style>

	<style name="cardContenedoraPerfil" parent="size_1_2">
		<item name="android:layout_marginStart">6dp</item>
		<item name="android:layout_marginTop">6dp</item>
		<item name="android:layout_marginEnd">6dp</item>
		<item name="android:layout_marginBottom">6dp</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="cardCornerRadius">10dp</item>
		<item name="cardElevation">4dp</item>
	</style>

	<style name="lnlytCardPerfil" parent="size_1_2">
		<item name="android:layout_marginStart">18dp</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginEnd">18dp</item>
		<item name="android:layout_marginBottom">7dp</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="tvTituloPerfil" parent="texto_1_2_Oscuro">
		<item name="android:layout_gravity">center</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="tvModificar" parent="texto_2_2_Oscuro">
		<item name="android:text">modificar</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="tvFlecha" parent="texto_2_2_Oscuro">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">-4dp</item>
		<item name="android:fontFamily">@font/oswald_bold</item>
	</style>
</resources>