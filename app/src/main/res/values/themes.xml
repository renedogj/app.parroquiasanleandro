<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParroquiaSanLeandro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
    </style>

    <!-- Style splash -->
    <style name="SplashTheme" parent="Theme.ParroquiaSanLeandro">
        <item name="android:windowBackground">@drawable/fondo_parroquia</item>
    </style>

    <!-- Styles tamaÃ±o  1=match_parent, 2=wrap_content -->
    <style name="size_1_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="size_1_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="size_2_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="size_2_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Styles colores de texto -->
    <style name="texto_1_2_Claro" parent="size_1_2">
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="texto_1_1_Oscuro" parent="size_1_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="texto_1_2_Oscuro" parent="size_1_2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="texto_2_2_Oscuro" parent="size_2_2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="texto_2_1_Oscuro" parent="size_2_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Styles imagenes-->
    <style name="imgMenuNavigation">
        <item name="android:layout_width">@dimen/img_menu</item>
        <item name="android:layout_height">@dimen/img_menu</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>