        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">@color/background_items</item>
    </style>

    <style name="cardTituloHorario" parent="basicCard_1_2_bl_r10_e3">
