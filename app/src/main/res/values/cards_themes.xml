        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/background_items</item>
    </style>

    <style name="CardActualizarInfo" parent="basicCard_1_2_bl_r10_e3">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="cardGrupoBotonSeguir">
