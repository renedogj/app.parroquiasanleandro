<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/size_1_1"
    android:background="@drawable/fondo_parroquia">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:name="es.parroquiasanleandro.fragments.FragmentConfirmarPassword"
        style="@style/size_1_1"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        style="@style/CardActualizarInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/size_1_2"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/size_1_2"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="¿Estas seguro que quires eliminar tu usuario?"
                android:textColor="@color/rojo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                style="@style/size_1_2"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Se eliminara para siempre toda la información de tu usuario."
                android:textSize="14sp" />

            <TextView
                style="@style/size_1_2"
                android:padding="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Esta acción es irreversible."
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnEliminarUsuario"
                style="@style/size_1_2"
                android:layout_margin="5dp"
                android:text="Eliminar usuario" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>