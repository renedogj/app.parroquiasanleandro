<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGrupo"
    style="@style/size_2_2"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:background="@color/background_items"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/linearLayoutContenedorGrupo"
        style="@style/lnly_1_2_v"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContenedoraGrupo"
            style="@style/size_2_2"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/linearLayoutGrupo"
                style="@style/lnly_1_2_v"
                android:background="@color/background_items"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="3dp"
                android:paddingBottom="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImgGrupo"
                    style="@style/size_2_2"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        style="@style/size_1_2"
                        android:background="@color/transparente"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGrupo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/transparente" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvNombreGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>