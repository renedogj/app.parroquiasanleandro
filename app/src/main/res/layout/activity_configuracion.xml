<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/size_1_1"
    android:background="@color/blanco">

    <LinearLayout
        style="@style/lnly_1_2_v">
        <androidx.cardview.widget.CardView style="@style/cardContenedora">

            <LinearLayout
                android:id="@+id/lnlytConfiguaracion"
                style="@style/lnlytCardPerfil_1_2_v"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/tvTituloPerfil"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Tu cuenta" />

                <TextView
                    style="@style/tvFlecha"
                    android:layout_margin="0dp"
                    android:text=" >" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView style="@style/cardContenedora">

            <LinearLayout
                android:id="@+id/lnlytPrivacidad"
                style="@style/lnlytCardPerfil_1_2_v"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/tvTituloPerfil"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Privacidad" />

                <TextView
                    style="@style/tvFlecha"
                    android:layout_margin="0dp"
                    android:text=" >" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>