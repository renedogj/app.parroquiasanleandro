<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGrupo"
    style="@style/size_1_2"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="6dp"
    android:background="@color/background_items"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/linearLayoutContenedorGrupo"
        style="@style/lnly_1_2_h"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContenedoraGrupo"
            style="@style/size_1_2"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/linearLayoutGrupo"
                style="@style/lnly_1_2_h"
                android:background="@color/background_items"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImgGrupo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        style="@style/size_1_1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGrupo"
                            style="@style/size_1_1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="vertical"
                        android:paddingStart="5dp">

                        <TextView
                            android:id="@+id/tvNombreGrupo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:textColor="@color/negro"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMasGrupos"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:text="+ subgrupos"
                            android:textColor="@color/azul"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGrupoBotonSeguir"
                        style="@style/cardGrupoBotonSeguir">

                        <TextView
                            android:id="@+id/tvBotonSeguir"
                            style="@style/tvBotonSeguir" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>