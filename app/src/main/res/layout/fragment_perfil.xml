<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/size_1_1"
	android:background="@color/white">

	<LinearLayout
		style="@style/size_1_2"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/linearLayoutFotoPerfil"
			style="@style/size_1_2"
			android:background="@color/white"
			android:orientation="horizontal">

			<Space
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1" />

			<androidx.cardview.widget.CardView
				style="@style/size_2_2"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				app:cardCornerRadius="25dp"
				app:cardElevation="5dp">

				<ImageView
					android:id="@+id/ivFotoPerfil"
					android:layout_width="160dp"
					android:layout_height="160dp"
					android:background="@color/white"
					android:src="@drawable/fondo_parroquia_dark" />
			</androidx.cardview.widget.CardView>

			<Space
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1" />
		</LinearLayout>

		<androidx.cardview.widget.CardView
			android:id="@id/cardAviso"
			style="@style/size_1_2"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="-25dp"
			app:cardBackgroundColor="@color/white"
			app:cardCornerRadius="25dp"
			app:cardElevation="10dp">

			<LinearLayout
				android:id="@+id/linearLayoutContenedorAviso"
				style="@style/size_1_2"
				android:layout_marginBottom="30dp"
				android:orientation="vertical"
				android:padding="10dp">

				<LinearLayout
					android:id="@+id/linearLayoutNombre"
					style="@style/size_1_2"
					android:layout_marginStart="18dp"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="18dp"
					android:layout_marginBottom="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tvNombreUsuario"
						style="@style/texto_1_2_Oscuro"
						android:layout_gravity="center"
						android:gravity="center"
						android:textSize="20sp"
						android:textStyle="bold" />
				</LinearLayout>

				<androidx.cardview.widget.CardView style="@style/cardContenedoraPerfil">

					<LinearLayout
						android:id="@+id/linearLayoutEmail"
						style="@style/lnlytCardPerfil">

						<TextView
							style="@style/tvTituloPerfil"
							android:text="Mi correo electronico:" />

						<LinearLayout
							style="@style/size_1_2"
							android:orientation="horizontal">

							<TextView
								android:id="@+id/tvEmail"
								style="@style/texto_2_2_Oscuro"
								android:layout_gravity="center"
								android:layout_weight="1"
								android:text=""
								android:textSize="16sp" />

							<Space
								android:layout_width="10dp"
								android:layout_height="match_parent" />

							<TextView style="@style/tvModificar" />

							<TextView
								style="@style/tvFlecha"
								android:text=" >" />
						</LinearLayout>
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView style="@style/cardContenedoraPerfil">

					<LinearLayout style="@style/lnlytCardPerfil">

						<LinearLayout
							android:id="@+id/linearLayoutCategorias"
							style="@style/size_1_2"
							android:orientation="horizontal">

							<TextView
								style="@style/tvTituloPerfil"
								android:layout_weight="1"
								android:text="Mis categorias:" />

							<TextView style="@style/tvModificar" />

							<TextView
								style="@style/tvFlecha"
								android:text=" >" />
						</LinearLayout>

						<androidx.recyclerview.widget.RecyclerView
							android:id="@+id/rvCategoriasUsuario"
							style="@style/size_1_2"
							android:paddingLeft="1dp"
							android:paddingTop="3dp"
							android:paddingRight="1dp"
							android:paddingBottom="3dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView style="@style/cardContenedoraPerfil">

					<LinearLayout
						android:id="@+id/linearLayoutFechaNacimiento"
						style="@style/lnlytCardPerfil">

						<TextView
							style="@style/tvTituloPerfil"
							android:text="Fecha de nacimiento:" />

						<LinearLayout
							style="@style/size_1_2"
							android:orientation="horizontal">

							<TextView
								android:id="@+id/tvFechaNacimiento"
								style="@style/texto_2_2_Oscuro"
								android:layout_gravity="center"
								android:layout_weight="1"
								android:text=""
								android:textSize="16sp" />

							<Space
								android:layout_width="10dp"
								android:layout_height="match_parent" />

							<TextView style="@style/tvModificar" />

							<TextView
								style="@style/tvFlecha"
								android:text=" >" />
						</LinearLayout>
					</LinearLayout>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</ScrollView>