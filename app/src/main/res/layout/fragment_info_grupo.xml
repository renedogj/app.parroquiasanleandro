<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutContenedorGrupo"
    style="@style/lnly_1_1_h"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContenedoraGrupo"
        style="@style/size_1_1"
        app:cardBackgroundColor="@color/background_items"
        app:cardCornerRadius="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp">

            <LinearLayout
                android:id="@+id/linearLayoutGrupo"
                style="@style/lnly_1_2_v"
                android:background="@color/background_items">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImgGrupo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        style="@style/size_1_1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGrupo"
                            style="@style/size_1_1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvNombreGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    style="@style/lnly_1_1_v"
                    android:layout_gravity="center">

                    <LinearLayout style="@style/lnly_1_1_h">

                        <Space style="@style/spaces_2_1_1" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardGrupoBotonSeguir"
                            style="@style/cardGrupoBotonSeguir"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvBotonSeguir"
                                style="@style/tvBotonSeguir"/>
                        </androidx.cardview.widget.CardView>

                        <Space style="@style/spaces_2_1_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp">

                        <TextView
                            android:id="@+id/tvMasGrupos"
                            style="@style/size_1_1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="+ subgrupos"
                            android:textColor="@color/azul"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTextoGrupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Texto con una descripcion de los distintos grupos. Este texto sera editable y personalizable en cada uno de los distintos grupos con el objetivo de poder dar a conocer las distintas realidades de la parroquia"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>