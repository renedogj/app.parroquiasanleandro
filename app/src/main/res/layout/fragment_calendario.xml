<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/size_1_1"
    android:background="@drawable/fondo_parroquia"
    tools:context=".fragments.FragmentCalendario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMesAnterior"
                style="@style/size_1_1"
                android:layout_weight="3"
                android:fontFamily="@font/nanum_gothic_extra_bold"
                android:gravity="center"
                android:text="&lt;"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMes"
                style="@style/size_1_1"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMesSiguiente"
                style="@style/size_1_1"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:fontFamily="@font/nanum_gothic_extra_bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="&gt;"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            style="@style/lnly_1_2_v"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                style="@style/lnly_1_2_h"
                android:layout_marginBottom="2dp">

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="L" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="M" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="X" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="J" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="V" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="S" />

                <TextView
                    style="@style/tvDiasSemanaCalendario"
                    android:text="D" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendario"
                style="@style/size_1_2"
                android:paddingTop="0dp"
                android:paddingBottom="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tvFechaSelecionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAvisosDiaSelecionado"
                style="@style/size_1_2"
                android:paddingTop="0dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/tvNoHayAvisos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>