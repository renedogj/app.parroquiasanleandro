<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCategoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="5dp"
    android:padding="7dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/linearLayoutCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ff92"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImgCategoria"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparente"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparente"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvNombreCategoria"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:padding="5dp"
            android:text="Catequesis"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCategoriaBoton"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="10"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/tvBotonSeguir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bordes"
                android:gravity="center"
                android:text="Seguir"
                android:textColor="#5A5046"
                android:textSize="14sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>