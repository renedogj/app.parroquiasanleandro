<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDia"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_margin="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="2dp"
    android:elevation="2dp"
    android:padding="5dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/linearLayoutDiaCalendario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvNumDia"
            style="@style/texto_1_2_Claro"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="1dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAvisosDia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/background_items"
            android:layout_margin="2dp"
            app:cardCornerRadius="4dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAvisosDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_items" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>