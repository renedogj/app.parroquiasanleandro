<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAviso"
    style="@style/size_1_2"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    android:background="@color/background_items"
    android:padding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/linearLayoutContenedorAviso"
        style="@style/lnly_1_2_h"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContenedoraAviso"
            style="@style/size_1_2"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/linearLayoutAviso"
                style="@style/lnly_1_2_h"
                android:background="@color/background_items">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivAviso"
                        android:layout_width="70dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@color/transparente" />
                </LinearLayout>

                <LinearLayout
                    style="@style/lnly_1_1_v"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tvTitulo"
                        style="@style/size_1_2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFecha"
                        style="@style/size_1_2"
                        android:background="@color/transparente"
                        android:text=""
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>