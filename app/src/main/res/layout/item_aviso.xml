<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAviso"
    style="@style/size_1_2"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    android:background="@color/background_items"
    android:padding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/linearLayoutContenedorAviso"
        style="@style/lnly_1_2_h"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContenedoraAviso"
            style="@style/size_1_2"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/linearLayoutAviso"
                style="@style/lnly_1_2_h"
                android:background="@color/background_items">

                <LinearLayout
                    style="@style/lnly_2_2_v"
                    android:layout_gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivAviso"
                        android:layout_width="70dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@color/transparente" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/size_1_1"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tvTitulo"
                        style="@style/size_1_2"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvFecha"
                        style="@style/size_1_2"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/transparente"
                        android:text=""
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>